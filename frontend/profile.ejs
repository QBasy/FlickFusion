<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>FlickFusion</title>
  <link rel="icon" type="image/x-icon" href="assets/favicon-32x32.png">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://kit.fontawesome.com/f5c7d6a886.js" crossorigin="anonymous"></script>
  <link href="https://vjs.zencdn.net/8.10.0/video-js.css" rel="stylesheet" />
  <link href="css/style.css" rel="stylesheet" type="text/css">
</head>

<body>
<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-light shadow">
  <div class="container px-4 px-lg-5"><a class="navbar-brand" href="/" id="siteTitle">FlickFusion</a><button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
    <div
      class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
        <li class="nav-item"><a class="nav-link" aria-current="page" href="/">Home</a></li>
        <li class="nav-item dropdown"><a class="nav-link dropdown-toggle" id="navbarDropdownWatch" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Watch</a>
        </li>
        <li class="nav-item"><a class="nav-link" href="/feedback">Feedback</a></li>
      </ul>

      <div class="dropdown">
        <form class="d-flex">
          <button class="btn btn-outline-dark" type="button" id="accountDropdownBtn">
            <i class="fa-solid fa-user"></i> Account
          </button>
        </form>
        <ul class="dropdown-menu" id="accountDropdownMenu">
          <li><a class="dropdown-item" href="/addVideo">Add Video</a></li>
          <li><hr class="dropdown-divider"></li>
          <li><a class="dropdown-item" href="#">Log Out</a></li>
        </ul>
      </div>

    </div>
  </div>
</nav>

<!-- profile info -->
<section class="container my-5 py-4 border">
  <div class="row align-items-center">
    <div class="col-auto" id="img">
      <img src="img/toji.jpg" alt="avatar" id="profileAvatar">
    </div>
    <div class="col-auto">
      <h1 id="username">user)))</h1>
    </div>
  </div>
</section>

<!-- content -->
<section class="container my-5 px-0 border contentInfo">
  <!-- content's navbar -->
  <nav class="navbar navbar-expand-lg bg-dark navbar-dark shadow rounded-sub-navbar">
    <div class="container px-1 px-lg-1">
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item"><a class="nav-link sub-navbar active" href="#" onclick="showContent('userContent')">My Content</a></li>
        </ul>
        <div class="d-flex mb-2 mt-2 mt-lg-2 ms-lg-auto me-lg-2">
          <div class="d-flex w-100">
            <input class="form-control me-2 flex-grow-1" type="text" placeholder="Search" id="searchInput">
            <button id="searchButton" type="button" class="btn btn-primary flex-shrink-1">Search</button>
          </div>
        </div>
      </div>
    </div>
  </nav>



  <div class="showHider" id="userContent">
    <div class="">
      <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center videoRow" id="videoRow">

        </div>
      </div>
    </div>
  </div>

  <div class="showHider" id="userLiked">
    <div class="">
      Test like
    </div>
  </div>

  <div class="showHider" id="userBookmarks">
    <div class="">
      Test bookmark
    </div>
  </div>

  <div class="showHider" id="userSubscriptions">
    <div class="">
      Test subs
    </div>
  </div>

</section>

<!-- Footer -->
<footer class="py-5 bg-dark">
  <div class="container">
    <p class="m-0 text-center text-white">Copyright &copy; FlickFusion 2023</p>
  </div>
</footer>

<script src="js/profile.js"></script>
<script src="js/scripts.js"></script>
<script src="js/cardRemaster.js"></script>
</body>

</html>
